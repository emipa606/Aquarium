<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!--  Tank/Bowl maintenance jobs -->
  <JobDef>
    <defName>AQFeeding</defName>
    <driverClass>Aquarium.JobDriver_AQFeeding</driverClass>
    <reportString>Feeding fish in TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  <JobDef>
    <defName>AQCleaning</defName>
    <driverClass>Aquarium.JobDriver_AQCleaning</driverClass>
    <reportString>cleaning TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  <JobDef>
    <defName>AQManagingAdd</defName>
    <driverClass>Aquarium.JobDriver_AQManagingAdd</driverClass>
    <reportString>adding fish to TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  <JobDef>
    <defName>AQManagingRemove</defName>
    <driverClass>Aquarium.JobDriver_AQManagingRemove</driverClass>
    <reportString>removing fish from TargetA.</reportString>
    <allowOpportunisticPrefix>true</allowOpportunisticPrefix>
  </JobDef>
  <!--  Joy jobs -->
  <JobDef>
    <defName>AQViewFishBowl</defName>
    <driverClass>Aquarium.JobDriver_AQViewFishBowl</driverClass>
    <reportString>viewing fish.</reportString>
    <joyDuration>3000</joyDuration>
    <joyKind>AQAquarium</joyKind>
  </JobDef>
  <JobDef>
    <defName>AQViewFishTank</defName>
    <driverClass>Aquarium.JobDriver_AQViewFishTank</driverClass>
    <reportString>viewing fish.</reportString>
    <joyDuration>4000</joyDuration>
    <joyKind>AQAquarium</joyKind>
  </JobDef>
</Defs>