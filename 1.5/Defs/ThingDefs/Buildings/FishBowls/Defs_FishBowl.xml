<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>AQFishBowl</defName>
    <label>Fish Bowl</label>
    <description>A glass bowl with water for keeping pet fish in.</description>
    <graphicData>
      <texPath>Things/Bowls/FishBowl_Water</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.35,0.35,0.3,0.3)</rect>
      </damageData>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <fillPercent>0.25</fillPercent>
    <altitudeLayer>Item</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>25</pathCost>
    <minifiedDef>MinifiedThing</minifiedDef>
    <socialPropernessMatters>true</socialPropernessMatters>
    <clearBuildingArea>false</clearBuildingArea>
    <canOverlapZones>false</canOverlapZones>
    <blockWind>false</blockWind>
    <selectable>true</selectable>
    <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <thingCategories>
      <li>BuildingsJoy</li>
    </thingCategories>
    <designationCategory>Joy</designationCategory>
    <building>
      <joyKind>AQAquarium</joyKind>
      <ai_chillDestination>false</ai_chillDestination>
      <isInert>true</isInert>
      <isEdifice>false</isEdifice>
      <canPlaceOverWall>false</canPlaceOverWall>
    </building>
    <costList>
      <AQGlassBowl>1</AQGlassBowl>
    </costList>
    <statBases>
      <MaxHitPoints>75</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <MarketValue>7.4</MarketValue>
      <Mass>3.0</Mass>
      <WorkToBuild>180</WorkToBuild>
      <JoyGainFactor>1.5</JoyGainFactor>
      <Beauty>10</Beauty>
      <MeditationFocusStrength>0.25</MeditationFocusStrength>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="Aquarium.CompProperties_CompAquarium">
        <maxFish>1</maxFish>
        <powerNeeded>false</powerNeeded>
        <targetTemp>0.0</targetTemp>
        <heatPerSecond>0.0</heatPerSecond>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Natural</li>
          <li>Minimal</li>
        </focusTypes>
      </li>
    </comps>
    <placeWorkers>
      <li>Aquarium.PlaceWorker_AQFishBowl</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>AQFishPets</li>
    </researchPrerequisites>
  </ThingDef>
</Defs>