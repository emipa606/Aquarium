<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Glass+Lights</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>/Defs/RecipeDef[defName="Make_AQGlassBowl" or defName="Make_AQGlassPanel"]/recipeUsers</xpath>
          <value>
            <li>GlassworkTable</li>
            <li>FueledGlassworkTable</li>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>